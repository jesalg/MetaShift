{
  "name": "MetaShift",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Easily customize link previews on social media",
  "homepage_url": "http://www.metashift.io/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "MetaShift this page"
  }
}
